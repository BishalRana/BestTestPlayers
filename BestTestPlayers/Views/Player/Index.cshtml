@model BestTestPlayers.Models.PlayerAverageViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="page-header">
        <h2>Best Batsmen Of Test Cricket </h2>
    </div>
</div>
@using (Html.BeginForm())
{
    
<div  class="row">
   
        <div class="col-md-6 col-sm-10 col-xs-11">
            <div class="btn btn-default">
                Country: @Html.DropDownList("country", "All")
                Name: @Html.TextBox("name")
                <input type="submit" value="Filter" />
            </div>
            <br />
            <br/>
            <div class="nav navbar-nav navbar-left">
                <div class="navbar-header">                                          
                    @Html.ActionLink("Create", "Create")
                </div>
            </div>         
        </div>
    </div>
 }


<div style="padding-top:40px;" class="row">
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].Matches)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].HighestScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.players[0].Average)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.players)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matches)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HighestScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Average)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
        



